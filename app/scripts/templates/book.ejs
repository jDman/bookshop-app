<div class="bookImg panel">
  <img src="<%- picture %>" alt="<%- title %>" width="150" height="200"/>
</div>
<div class="bookDetails">
  <h5><%- title %></h5>
  <h6 class="subheader">by <%- author %></h6>
  <p>Â£<%= price %></p>

  <a href="#" class="button success" data-reveal-id="myModal<%= id %>">Read more...</a>

  <div id="myModal<%= id %>" class="reveal-modal" data-reveal>
    <div class="clearfix">
      <div class="left">
        <h3><%- title %></h3>
        <p>Author: <%- author %> | Publisher: <%- publisher %></p>
      </div>
      <div class="right tags">
          Tags:
         <% _.each(tags, function(tag){%>
            <span class="label radius round"><%- tag %></span>
         <%}) %>
      </div>
    </div>
    <div><%- description %></div>
    <p class="label success">Rating: <% if( _.isNumber( rating ) ){ %>
      <strong><%- rating %></strong>
      <% } %></p>
    <a class="close-reveal-modal">&#215;</a>
  </div>
</div>
